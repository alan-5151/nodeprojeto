<div class="tags">
{{#tags}}

<div class="tag {{class}}"><a href="/?t={{_id}}">{{_id}}( {{count}} )</a></div>

{{/tags}}

</div>

<hr />

{{#posts}}
<div class="post">
	{{#photo}}
	<img src="/media/{{photo}}" alt="" />
	{{/photo}}
<h4><a href="/post/{{slug}}">{{title}}</a></h4>
<p>{{body}}</p>
<a href="/post/{{slug}}/edit">[ Editar ]</a>
</div>
{{/posts}}

<hr />
<ul>
	{{#interesses}}
	<li>{{.}}</li>
	{{/interesses}}

</ul>
<hr />
{{{teste}}}

